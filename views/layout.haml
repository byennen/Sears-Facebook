%html
  %head
    %meta{:content => "My List", :property => "og:title"}/
    %meta{:content => "website", :property => "og:type"}/
    %meta{:content => "http://searsfacebook.heroku.com/images/logo.png", :property => "og:image"}/
    %meta{:content => "http://searsfacebook.heroku.com/", :property => "og:url"}/
    %meta{:content => "SearsFacebook", :property => "og:site_name"}/
    %meta{:content => "643897273", :property => "fb:admins"}/
    %script{:charset => "utf-8", :src => "https://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "../javascripts/application.js", :type => "text/javascript"}
    %title Sears Facebook
    :css
      body { font-family: Arial; font-size: 20px ;}
      a { text-decoration: none; color: #333; }
      .logout a { color: #2554C7; font-size: 15px; }
      .article { font-size: 1.2em; }
      .like_site { font-size: 0.8em }
      %body
    = yield
    :javascript
      window.fbAsyncInit = function() { facebookInit(#{@js_conf}) };
      (function() {
        var e = document.createElement('script');
        e.src = document.location.protocol + '//connect.facebook.net/en_US/all.js';
        document.getElementById('fb-root').appendChild(e);
      }());